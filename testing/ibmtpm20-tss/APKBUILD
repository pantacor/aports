# Contributor:
# Maintainer:
pkgname="ibmtpm20-tss"
pkgver="1470"
pkgrel=0
pkgdesc="TPM2 tss library and commands by IBM"
url="https://gitlab.com/asacasa/ibmtpm20tss-tss/"
arch="all"
license="BSD-2-Clause"
makedepends="openssl-dev autoconf automake libtool doxygen linux-headers"
subpackages="$pkgname-dev $pkgname-doc"
source="https://gitlab.com/asacasa/ibmtpm20tss-tss/-/archive/v1470/ibmtpm20tss-tss-v1470.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver-*"

prepare() {
	cd $builddir
	autoreconf -i
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make	
}

package() {
	cd $builddir
	ls 
	make DESTDIR="$pkgdir" install
}

sha512sums="b43383c3e802a0a692e4f5dc2bccabb2002bca4b5460637da5d5594f988941f455d1894cece607fdebff9a3f2860ba96e12b48704f97aa34dea8914df151d08c  ibmtpm20tss-tss-v1470.tar.gz"
